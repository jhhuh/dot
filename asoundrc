pcm.mpow {
    type bluetooth
    device "00:08:2A:F0:0A:FF"
    profile "auto"
}

pcm.rawbluetooth {
	@args [ ADDRESS ]
	@args.ADDRESS {
		type string
	}
	type bluetooth
	device $ADDRESS
}

pcm.bluetooth {
	@args [ ADDRESS ]
	@args.ADDRESS {
		type string
	}
	type plug
	slave {
		pcm {
			type bluetooth
			device $ADDRESS
		}
	}
}
